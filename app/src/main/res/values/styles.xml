<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Airlift.App.Widget.ToolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:minHeight">?android:actionBarSize</item>
        <item name="android:background">@color/white</item>
        <item name="title">@null</item>
    </style>


    <style name="Airlift.App.Widget.TextView.ToolBar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:minWidth">?android:actionBarSize</item>
        <item name="android:layout_gravity">center|center_vertical|center_horizontal</item>
        <item name="android:gravity">center|center_vertical|center_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="font">@font/roboto_regular</item>
    </style>

    <style name="Airlift.App.Widget.ImageView" parent="Theme.AirliftCodingChallenge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="shapeAppearance.App.CircleImageView.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Airlift.App.Widget.ImageView.Circle.Medium" parent="Airlift.App.Widget.ImageView">
        <item name="android:layout_width">@dimen/_42sdp</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="shapeAppearance">@style/shapeAppearance.App.CircleImageView.MediumComponent
        </item>
    </style>

    <style name="Yap.App.Widget.ImageView.Circle.Large" parent="Airlift.App.Widget.ImageView.Circle.Medium">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
    </style>


</resources>